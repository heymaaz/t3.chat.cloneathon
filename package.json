{
  "name": "flex-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "convex dev --once && node setup.mjs && npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "build": "vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -p convex -noEmit --pretty false && tsc -p . -noEmit --pretty false",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run"
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.87",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.8",
    "@tanstack/react-router": "^1.121.0",
    "ai": "^4.3.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "1.24.8",
    "dompurify": "^3.2.6",
    "lucide-react": "^0.514.0",
    "marked": "^15.0.12",
    "openai": "^5.3.0",
    "radix-ui": "^1.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-pdf": "^9.2.1",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "tslib": "^2.8.1",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^24.0.0",
    "@types/react": "^19.1.7",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "babel-plugin-react-compiler": "19.1.0-rc.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "6.0.0-rc1",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-react-you-might-not-need-an-effect": "^0.1.4",
    "globals": "^16.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "~8.5.4",
    "prettier": "^3.5.3",
    "tailwindcss": "~4.1.8",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.2.3"
  }
}
